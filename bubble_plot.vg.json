{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/ykhaiwei/AS03_A2_YeeKhaiWei_32846398/refs/heads/main/Countries.csv"
  },
  "width": 450,
  "height": 320,
  "params": [
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Africa",
          "Asia",
          "Europe",
          "North America",
          "Oceania",
          "South America"
        ],
        "labels": [
          "Show All",
          "Africa",
          "Asia",
          "Europe",
          "North America",
          "Oceania",
          "South America"
        ],
        "name": "Continent:  "
      }
    },
    {
      "name": "Year",
      "value": 2008,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2022,
        "step": 1,
        "name": "Year:  "
      }
    }
  ],
  "transform": [
    { "filter": "datum.GDP > 0" },
    { "filter": "datum.Year == Year" },
    {
      "filter": "Continent_selection == null || datum['Continent Name'] == Continent_selection"
    },
    {
      "calculate": "datum.GDP/1000000",
      "as": "Gross Domestic Product (in millions)"
    }
  ],
  "encoding": {
    "x": {
      "field": "Population",
      "type": "quantitative",
      "axis": { "tickCount": 5 },
      "scale": { "type": "log", "domain": [1000, 10000000000] }
    },
    "y": {
      "field": "Gross Domestic Product (in millions)",
      "type": "quantitative",
      "axis": { "tickCount": 7 },
      "scale": { "type": "log", "domain": [1, 100000000] },
      "title": "GDP (in millions of USD)"
    }
  },
  "layer": [
    {
      "mark": { "type": "circle", "tooltip": true },
      "encoding": {
        "size": {
          "field": "Land",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1000, 100000, 500000, 1000000, 5000000],
            "range": [20, 40, 80, 160, 360, 720]
          },
          "legend": {
            "format": ".1s",
            "title": "Land Area (km²)",
            "orient": "bottom-right"
          }
        },
        "color": {
          "field": "Continent Name",
          "type": "nominal",
          "scale": {
            "domain": [
              "Africa",
              "Asia",
              "Europe",
              "North America",
              "Oceania",
              "South America"
            ],
            "range": [
              "#542788",
              "#8073ac",
              "#b2abd2",
              "#fdb863",
              "#e08214",
              "#b35806"
            ]
          },
          "legend": { "title": "Continent", "orient": "top-left"}
        },
        "opacity": { "value": 0.7 },
        "tooltip": [
          { "field": "Country Name", "type": "nominal", "title": "Country" },
          {
            "field": "Continent Name",
            "type": "nominal",
            "title": "Continent"
          },
          {
            "field": "Gross Domestic Product (in millions)",
            "type": "quantitative",
            "format": ",.2f",
            "title": "GDP (in millions USD)"
          },
          {
            "field": "Population",
            "type": "quantitative",
            "format": ",",
            "title": "Population"
          },
          {
            "field": "Land",
            "type": "quantitative",
            "format": ",.0f",
            "title": "Land Area (km²)"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -16,
        "fontSize": 10,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": { "field": "Country Name", "type": "nominal" },
        "color": { "value": "#2d004b" },
        "opacity": {
          "condition": {
            "test": "datum['Country Name'] == 'China' || datum['Country Name'] == 'India'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          { "field": "Country Name", "type": "nominal", "title": "Country" },
          {
            "field": "Continent Name",
            "type": "nominal",
            "title": "Continent"
          },
          {
            "field": "Gross Domestic Product (in millions)",
            "type": "quantitative",
            "format": ",.2f",
            "title": "GDP (in millions USD)"
          },
          {
            "field": "Population",
            "type": "quantitative",
            "format": ",",
            "title": "Population"
          },
          {
            "field": "Land",
            "type": "quantitative",
            "format": ",.0f",
            "title": "Land Area (km²)"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -16,
        "fontSize": 10,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": { "field": "Country Name", "type": "nominal" },
        "color": { "value": "#e08214" },
        "opacity": {
          "condition": {
            "test": "datum['Country Name'] == 'United States'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          { "field": "Country Name", "type": "nominal", "title": "Country" },
          {
            "field": "Continent Name",
            "type": "nominal",
            "title": "Continent"
          },
          {
            "field": "Gross Domestic Product (in millions)",
            "type": "quantitative",
            "format": ",.2f",
            "title": "GDP (in millions USD)"
          },
          {
            "field": "Population",
            "type": "quantitative",
            "format": ",",
            "title": "Population"
          },
          {
            "field": "Land",
            "type": "quantitative",
            "format": ",.0f",
            "title": "Land Area (km²)"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -5,
        "fontSize": 10,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": { "field": "Country Name", "type": "nominal" },
        "color": { "value": "#7f3b08" },
        "opacity": {
          "condition": {
            "test": "datum['Country Name'] == 'Tuvalu' || datum['Country Name'] == 'Nauru'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          { "field": "Country Name", "type": "nominal", "title": "Country" },
          {
            "field": "Continent Name",
            "type": "nominal",
            "title": "Continent"
          },
          {
            "field": "Gross Domestic Product (in millions)",
            "type": "quantitative",
            "format": ",.2f",
            "title": "GDP (in millions USD)"
          },
          {
            "field": "Population",
            "type": "quantitative",
            "format": ",",
            "title": "Population"
          },
          {
            "field": "Land",
            "type": "quantitative",
            "format": ",.0f",
            "title": "Land Area (km²)"
          }
        ]
      }
    }
  ]
}
